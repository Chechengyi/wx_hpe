/* 引入富文本样式文件  */
@import "../../wxParse/wxParse.wxss";
/* index.wxss */
.index-wrapper{
   width: 100%; 
  /* overflow: visible; */
  display: flex;
  flex-direction: column;
  align-items: center;
}
.load {
   background: #f6f6f6;
  height: 150rpx;
  text-align: center;
  line-height: 170rpx;
  font-size: 20rpx;
}
.index-wrapper .index-content{
   width: 680rpx; 
   /* height: 100%;  */
  overflow: visible;
}
.category-wrapper{
  display: flex;
  padding-top: 25rpx;
  flex-direction: row;
  justify-content: space-around;
}
.category-wrapper .category-cell{
  width: 327rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #d2d2d2;
  background-size: cover;
  border-radius: 10rpx;
}
.category-cell.cell-l{
  background-image: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=432530694,1142617927&fm=27&gp=0.jpg');
}
.category-cell.cell-r{
  background-image: url('https://ss1.bdstatic.com/70cFuXSh_Q1YnxGkpoWK1HF6hhy/it/u=3811821413,393669060&fm=27&gp=0.jpg');
}
.category-cell .category-title{
  width: 400rpx;
  text-align: center;
  color: #fff;
}
.category-cell .category-zh-title{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 20rpx;
}
.category-cell .category-en-title{
  font-size: 20rpx;
  letter-spacing: 6rpx;
  margin-top: 20rpx;
}
.index-separation{
  position: relative;
  width: 100%;
  height: 56rpx;
  text-align: center;
  margin: 10rpx 0;
}
.index-separation:before{
  content: '';
  position: absolute;
  width: 100%;
  height: 2rpx;
  left: 0;
  top: 30rpx;
  z-index: -1;
  background-color: #e2e2e2;
}
.index-separation .list-title{
  font-size: 24rpx;
  padding: 0 20rpx;
  color: #aaa;
  letter-spacing: 4rpx;
  background-color: #fff;
}
.index-content .book-list-wrapper{
  display: flex;
  flex-direction: row;
   /* justify-content: space-between ;  */
   justify-content: space-around;
  margin-right: 20px; 
  flex-wrap: wrap;
  overflow: visible;
}
.index-content .book-list-wrapper .book-item{
  width: 200rpx;
  height: 360rpx;
  margin: 20rpx 0;
  overflow: visible;
}
.book-list-wrapper {
  margin: 0 30rpx
}
.book-item .book-cover{
  width: 200rpx;
  height: 280rpx;
  box-shadow: 0 0 4px 1px rgba(0,0,0,0.02);
}
.book-item .book-name{
  font-size: 24rpx;
  color: #000;
  padding-left: 20rpx;
  border-left: 4rpx solid #d2d2d2;
}
.up-loading {
  text-align: center;
  font-size: 20rpx;
  height: 50rpx
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent
}